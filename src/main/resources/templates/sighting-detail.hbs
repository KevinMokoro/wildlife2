{{#partial "content"}}
    <h1>{{sighting.location}}</h1>
    <p>Sightings in this Area:</p>
    <ul>
        {{#each animals}}
            {{#if endangered}}
            <li>
                <p><a href="/sightings/{{sighting.id}}/endangered/{{id}}">{{name}}</a></p>
            </li>
            {{else}}
                <li>
                    <p><a href="/sightings/{{sighting.id}}/animal/{{id}}">{{name}}</a></p>
                </li>

            {{/if}}
        {{/each}}
    </ul>
    <a href="/sightings/{{sighting.id}}/edit">Edit</a><br>
    <a href="/sightings/{{sighting.id}}/delete">DELETE</a>
{{/partial}}

{{> layout.hbs}}