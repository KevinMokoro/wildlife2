{{#partial "content"}}

    <form action="/animals" method="post">
        {{#if sightings}}
            <div class="form-group">
            <label for="name">Animal Name</label>
            <input id="name" name="name" type="text">
            </div>

            <label for="endangered">Endangered?</label>
            <input type="checkbox" name="endangered" id="endangered" value="yes" >


            <h3>Additional Info for Endangered Animals:</h3>
            <div class="form-group reveal-if-active">
                <label for="health">Health (as far you can tell)</label>
                <select class="form-control" name="health">
                    <option>{{HEALTH_HEALTHY}}</option>
                    <option>{{HEALTH_OK}}</option>
                    <option>{{HEALTH_ILL}}</option>
                </select>
            </div>
            <div class="form-group reveal-if-active">
                <label for="age">Age (as far you can tell)</label>
                <select class="form-control" name="age">
                    <option>{{AGE_BABY}}</option>
                    <option>{{AGE_YOUNG}}</option>
                    <option>{{AGE_ADULT}}</option>
                </select>
            </div>


            <label for="sightingId">Add this to sighting location:</label>
            <select id="sightingId" name="sightingId">
                {{#each sightings}}
                    <option value="{{id}}">{{location}}</option>
                {{/each}}
            </select>
            <p>Don't see the right Sighting Location?<a href="/sightings/new">Add Sighting.</a></p>
        {{else}}
            <h3> You'll need to add a Sighting before you add an animal. <a href="/sightings/new">Add one here.</a> </h3>
        {{/if}}
        <button type="submit" class="btn btn-default">Go!</button>
    </form>

{{/partial}}

{{> layout.hbs}}